@using BuiThiPhuongThao.Models
@model AssignRoleVM

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header text-white">
            <h5 class="mb-0"><i class="bi bi-person-check"></i> Thêm Quyền</h5>
        </div>
        <div class="card-body">
            <form asp-action="AssignRole">
                <div class="mb-3">
                    <label class="form-label fw-bold">Chọn quyền:</label>
                    <div class="row">
                        @foreach (var role in Model.AllRole)
                        {
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="@role.Id" name="SelectedRole" value="@role.Name"
                                    @(Model.SelectedRole != null && Model.SelectedRole.Contains(role.Name) ? "checked" : "") />
                                    <label class="form-check-label" for="@role.Id">@role.Name</label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <input type="hidden" value="@Model.UserId" name="UserId">
                <button type="submit" class="btn btn-success w-100">
                    <i class="bi bi-check-circle"></i> Xác nhận
                </button>
            </form>
        </div>
    </div>
</div>